@model BTLNhom10.Models.Quanlyhoso

@{
    ViewData["Title"] = "Edit";
}

<div class="w3-row w3-teal col-md-2">
    
        <h2 class="w3-center w3-text" style=" font-family: Times New Roman; font-size:20px ">Sửa thông tin</h2>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNV" />
            <div class="form-group">
                <label asp-for="TenNV" class="control-label"></label>
                <input asp-for="TenNV" class="form-control" />
                <span asp-validation-for="TenNV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SinhNgay" class="control-label"></label>
                <input type="date" asp-for="SinhNgay" class="form-control" />
                <span asp-validation-for="SinhNgay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayLamViec" class="control-label"></label>
                <input type="date" asp-for="NgayLamViec" class="form-control" />
                <span asp-validation-for="NgayLamViec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label"></label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTaiKhoan" class="control-label"></label>
                <input asp-for="SoTaiKhoan" class="form-control" />
                <span asp-validation-for="SoTaiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhongBan" class="control-label"></label>
                <input asp-for="PhongBan" class="form-control" />
                <span asp-validation-for="PhongBan" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                @* <input type="submit" value="Save" class="btn btn-primary" /> *@
                <input type="submit" value="Lưu thông tin" class="btn btn-primary " style="margin-top: 20px;" />
            </div>
        </form>
    </div>
</div>

<div>
    @* <a asp-action="Index">Quay lại</a> *@
     <a asp-action="Index" ><button  class="w3-button w3-blue w3-holver" style="margin-top: 20px;">Quay lại</button></a>
</div>

